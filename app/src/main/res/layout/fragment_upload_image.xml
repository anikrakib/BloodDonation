<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AboutYouFragment"
    tools:targetApi="lollipop"
    tools:ignore="HardcodedText,ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You're almost done"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:textColor="@color/primaryTextColor"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/genderMale"
            android:layout_width="@dimen/margin_300dp"
            android:layout_height="@dimen/margin_300dp"
            app:cardBackgroundColor="@color/textBoxBackgroundColor"
            app:cardCornerRadius="150dp"
            android:elevation="@dimen/margin_5dp"
            app:cardElevation="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="@color/black"
            app:cardUseCompatPadding="true"
            app:contentPadding="1dp">

            <LinearLayout
                android:id="@+id/uploadPhotoLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/upload_icon"
                    app:tint="@color/primaryColor" />

                <TextView
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a photo"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginBottom="@dimen/margin_20dp"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfilePic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/male"
                android:visibility="gone"/>

            <com.ramijemli.percentagechartview.PercentageChartView
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:pcv_animDuration="750"
                app:pcv_animInterpolator="anticipate_overshoot"
                app:pcv_mode="ring"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_20dp"
                app:pcv_orientation="counter_clockwise"
                app:pcv_progress="0"
                app:pcv_backgroundBarColor="@color/navigationItemSelectedBackground"
                app:pcv_progressColor="@color/primaryColor"
                app:pcv_startAngle="-0"
                app:pcv_textColor="@color/primaryColor" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uploadImageHints"
            android:textColor="@color/secondaryTextColor"
            android:gravity="center"
            android:textSize="@dimen/text_size_18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/startJourneyButton"
        style="@style/fragmentNextButtonStyle"
        android:layout_width="@dimen/fragment_next_button_width"
        android:layout_height="wrap_content"
        android:text="Start Journey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AboutYouFragment"
    tools:ignore="HardcodedText"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let Us Know About You"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/primaryTextColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:gravity="center"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginStart="@dimen/margin_5dp"
                android:textSize="@dimen/text_size_18sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/textBoxBackgroundColor"
                app:cardCornerRadius="@dimen/margin_15dp"
                android:elevation="@dimen/margin_5dp"
                app:cardElevation="3dp"
                android:outlineAmbientShadowColor="@color/black"
                app:cardUseCompatPadding="true"
                app:contentPadding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="johndoe"
                        android:inputType="text"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:gravity="center"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginStart="@dimen/margin_5dp"
                android:textSize="@dimen/text_size_18sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/textBoxBackgroundColor"
                app:cardCornerRadius="@dimen/margin_15dp"
                android:elevation="@dimen/margin_5dp"
                app:cardElevation="3dp"
                android:outlineAmbientShadowColor="@color/black"
                app:cardUseCompatPadding="true"
                app:contentPadding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Johndoe@gmail.com"
                        android:inputType="textEmailAddress"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:gravity="center"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginStart="@dimen/margin_5dp"
                android:textSize="@dimen/text_size_18sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/textBoxBackgroundColor"
                app:cardCornerRadius="@dimen/margin_15dp"
                android:elevation="@dimen/margin_5dp"
                app:cardElevation="3dp"
                android:outlineAmbientShadowColor="@color/black"
                app:cardUseCompatPadding="true"
                app:contentPadding="1dp"
                tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:hint="********"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/showOrHidePassword"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/showOrHidePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_red_eye"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutYouHints"
            android:textColor="@color/secondaryTextColor"
            android:gravity="center"
            android:textSize="@dimen/text_size_18sp"
            android:layout_marginTop="@dimen/margin_25dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        style="@style/fragmentNextButtonStyle"
        android:layout_width="@dimen/fragment_next_button_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
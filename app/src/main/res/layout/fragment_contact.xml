<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Profile.InfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:background="@color/white">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/qrCodeColor"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:gravity="center"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textSize="@dimen/text_size_18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/textBoxBackgroundColor"
                    app:cardCornerRadius="@dimen/margin_15dp"
                    android:elevation="@dimen/margin_5dp"
                    app:cardElevation="3dp"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="1dp">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No"
                    android:gravity="center"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textSize="@dimen/text_size_18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/textBoxBackgroundColor"
                    app:cardCornerRadius="@dimen/margin_15dp"
                    android:elevation="@dimen/margin_5dp"
                    app:cardElevation="3dp"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="1dp">

                    <TextView
                        android:id="@+id/phoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alt Phone No"
                    android:gravity="center"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textSize="@dimen/text_size_18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/textBoxBackgroundColor"
                    app:cardCornerRadius="@dimen/margin_15dp"
                    android:elevation="@dimen/margin_5dp"
                    app:cardElevation="3dp"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="1dp">

                    <TextView
                        android:id="@+id/altPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:gravity="center"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textSize="@dimen/text_size_18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/textBoxBackgroundColor"
                    app:cardCornerRadius="@dimen/margin_15dp"
                    android:elevation="@dimen/margin_5dp"
                    app:cardElevation="3dp"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="1dp">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Media"
                    android:gravity="center"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textSize="@dimen/text_size_18sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/textBoxBackgroundColor"
                    app:cardCornerRadius="@dimen/margin_15dp"
                    android:elevation="@dimen/margin_5dp"
                    app:cardElevation="3dp"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="1dp">

                    <TextView
                        android:id="@+id/social"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
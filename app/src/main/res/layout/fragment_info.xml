<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Profile.InfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:background="@color/white">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/qrCodeColor"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem"
                android:textSize="@dimen/text_size_15sp"
                android:textColor="@color/secondaryTextColor"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <LinearLayout
                android:id="@+id/badgeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/details"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Badges"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size_18sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    android:layout_marginStart="@dimen/margin_10dp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/yourBadgeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_below="@id/badgeLayout"
                android:layout_marginTop="@dimen/margin_10dp"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/bloodDonateRemainingProgressbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:trackColor="@color/qrCodeColor"
                app:indicatorColor="@color/primaryColor"
                android:progress="20"
                app:trackCornerRadius="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_below="@id/yourBadgeRecyclerView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:paddingBottom="@dimen/margin_10dp"
                android:layout_below="@id/bloodDonateRemainingProgressbar">

                <TextView
                    android:id="@+id/remainDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/text_size_15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remainingDateHints"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size_15sp" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
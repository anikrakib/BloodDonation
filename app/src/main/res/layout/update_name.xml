<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/margin_20dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_20dp"
        app:cardBackgroundColor="@color/cardViewBackgroundColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_15dp">

            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:gravity="center"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginStart="@dimen/margin_5dp"
                android:textSize="@dimen/text_size_18sp"
                android:layout_alignParentTop="true"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/textBoxBackgroundColor"
                app:cardCornerRadius="@dimen/margin_15dp"
                android:elevation="@dimen/margin_5dp"
                app:cardElevation="3dp"
                android:outlineAmbientShadowColor="@color/black"
                app:cardUseCompatPadding="true"
                app:contentPadding="1dp"
                android:layout_below="@id/close">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Your Full Name"
                        android:inputType="text"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:padding="@dimen/margin_15dp"
                        android:textSize="@dimen/text_size_15sp"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/save"
                android:padding="@dimen/margin_10dp"
                android:background="@drawable/button_background"
                android:layout_width="@dimen/fragment_next_button_width"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_18sp"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_below="@id/cardView"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>